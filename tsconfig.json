{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@docmaps/ui": ["./packages/ui"],
      "@docmaps/database": ["./packages/database"],
      "@docmaps/config": ["./packages/config"],
      "@docmaps/doc-parser": ["./packages/doc-parser"]
    }
  },
  "exclude": ["node_modules", "dist", ".next", ".turbo"]
}
